        <com.vn.ntesco.views.ReportImageView
            android:id="@+id/imageReportView"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/margin_big"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_big"
            android:gravity="center_vertical">

            <View
                android:layout_width="@dimen/width_line_label"
                android:layout_height="match_parent"
                android:background="#f1a707"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </View>

            <com.vn.ntesco.views.NTesCoTextView
                style="@style/ntesco_text_view_style"
                android:layout_marginLeft="@dimen/margin_smallXX"
                android:text="@string/location"
                android:textColor="@color/black_light"
                android:textSize="@dimen/font_16"
                app:NTesCoTextViewFont="SemiBold"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <com.vn.ntesco.views.NTesCoTextView
            android:id="@+id/txtAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginBottom="@dimen/margin_normal"
            android:background="@drawable/bg_corner_grey"
            android:hint="@string/enter_your_address"
            android:padding="@dimen/padding_normal"
            android:textColor="@color/grey_black"
            android:textSize="@dimen/font_normal"
            app:NTesCoTextViewFont="Regular" />

        <LinearLayout
            android:id="@+id/llGetLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_bigXX"

            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivLocation"
                android:layout_width="@dimen/icon_location"
                android:layout_height="@dimen/icon_location"
                android:layout_marginLeft="@dimen/margin_normal"
                android:src="@mipmap/current_location" />

            <com.vn.ntesco.views.NTesCoTextView
                android:id="@+id/btnGetCurrent"
                style="@style/ntesco_text_view_style"
                android:layout_marginLeft="@dimen/margin_smallXX"
                android:text="@string/get_current_location"
                android:textColor="#158BE4"
                android:textSize="@dimen/font_normal"
                app:NTesCoTextViewFont="SemiBold" />
        </LinearLayout>

        <com.vn.ntesco.views.NTesCoTextView
            android:id="@+id/btnSubmit"
            style="@style/ntesco_text_view_style"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/font_normal"
            android:layout_marginBottom="@dimen/margin_bigXX"
            android:background="@drawable/bg_button_orange"
            android:minWidth="@dimen/width_button"
            android:paddingLeft="@dimen/padding_big"
            android:paddingTop="@dimen/padding_smallXX"
            android:paddingRight="@dimen/padding_big"
            android:paddingBottom="@dimen/padding_smallXX"
            android:text="@string/submit"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal"
            app:NTesCoTextViewFont="Bold" />

